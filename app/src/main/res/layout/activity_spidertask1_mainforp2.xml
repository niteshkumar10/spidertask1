<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spidertask1_mainforp2">

    <TextView
        android:id="@+id/p1_name"
        android:layout_width="146dp"
        android:layout_height="28dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAlignment="center"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26" />

    <RadioGroup
        android:id="@+id/p1_options"
        android:layout_width="130dp"
        android:layout_height="127dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.832"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47">

        <RadioButton
            android:id="@+id/p1_stone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STONE" />

        <RadioButton
            android:id="@+id/p1_paper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAPER" />

        <RadioButton
            android:id="@+id/p1_scissors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCISSORS" />
    </RadioGroup>

    <TextView
        android:id="@+id/p1_scoreview"
        android:layout_width="131dp"
        android:layout_height="26dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:freezesText="true"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/p2_scoreview"
        android:layout_width="116dp"
        android:layout_height="24dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:freezesText="true"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toEndOf="@+id/p1_scoreview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <ImageView
        android:id="@+id/p1_imageview"
        android:layout_width="136dp"
        android:layout_height="143dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/p1_options"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/screen_background_light" />

    <Button
        android:id="@+id/enter_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839" />

</androidx.constraintlayout.widget.ConstraintLayout>