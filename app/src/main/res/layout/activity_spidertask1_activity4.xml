<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spidertask1_activity4">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="235dp"
        android:layout_height="49dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@+id/player_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp_scoreview"
        app:layout_constraintVertical_bias="0.666" />

    <RadioGroup
        android:id="@+id/player_options"
        android:layout_width="154dp"
        android:layout_height="132dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/computer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comp_scoreview"
        app:layout_constraintVertical_bias="0.758">

        <RadioButton
            android:id="@+id/player_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STONE" />

        <RadioButton
            android:id="@+id/player_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAPER" />

        <RadioButton
            android:id="@+id/player_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SCISSORS" />
    </RadioGroup>

    <Button
        android:id="@+id/enter_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.902" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="120dp"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@+id/computer"
        app:layout_constraintEnd_toStartOf="@+id/player_options"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_name"
        app:layout_constraintVertical_bias="0.352"
        app:srcCompat="@android:drawable/screen_background_light" />

    <TextView
        android:id="@+id/computer"
        android:layout_width="136dp"
        android:layout_height="46dp"
        android:gravity="center_horizontal"
        android:text="Computer"
        android:textAlignment="center"
        android:textSize="24sp"
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/computer_image"
        app:layout_constraintHorizontal_bias="0.788"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71" />

    <ImageView
        android:id="@+id/computer_image"
        android:layout_width="159dp"
        android:layout_height="120dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="28dp"
        android:freezesText="true"
        app:layout_constraintBottom_toTopOf="@+id/enter_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/screen_background_light" />

    <TextView
        android:id="@+id/result"
        android:layout_width="108dp"
        android:layout_height="26dp"
        android:layout_marginBottom="16dp"
        android:freezesText="true"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enter_4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/player_scoreview"
        android:layout_width="91dp"
        android:layout_height="27dp"
        android:text=""
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/comp_scoreview"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/comp_scoreview"
        android:layout_width="114dp"
        android:layout_height="30dp"
        android:text=""
        android:freezesText="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />
</androidx.constraintlayout.widget.ConstraintLayout>